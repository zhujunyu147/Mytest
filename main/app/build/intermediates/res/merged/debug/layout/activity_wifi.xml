<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_wifi_connect_before"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="打开wifi" />

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="请输入ip地址"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="连接打印机" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wifi_connect_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_link_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tab_layout_default_height"
            android:text="连接成功，可以如下操作"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_system_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/indicator_marginleft"
            android:background="@color/blue_bg"
            android:text="查看系统信息"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_param_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/indicator_marginleft"
            android:background="@color/blue_bg"
            android:text="参数查询"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_param_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/indicator_marginleft"
            android:background="@color/blue_bg"
            android:text="参数设置"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/indicator_marginleft"
            android:background="@color/blue_bg"
            android:text="一键复位"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_configuration_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/indicator_marginleft"
            android:background="@color/blue_bg"
            android:text="配置信息保存"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_configuration_save_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/indicator_marginleft"
            android:background="@color/blue_bg"
            android:text="配置信息加载"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_print_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/indicator_marginleft"
            android:background="@color/blue_bg"
            android:text="图片的打印"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_print_defalt_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/indicator_marginleft"
            android:background="@color/blue_bg"
            android:text="打印配置页"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_print_Medium_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/indicator_marginleft"
            android:background="@color/blue_bg"
            android:text="介质检查"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
