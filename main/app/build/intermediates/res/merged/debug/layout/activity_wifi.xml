<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_wifi_connect_before"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/bt_open_wifi" />

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="@string/bt_input_ip_address"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/bt_link_device" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wifi_connect_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_link_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tab_layout_default_height"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/wifi_link_success"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_system_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_scan_system_info"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_param_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_scan_config"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_param_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_set_config"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_restart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_one_key_reset"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_configuration_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_save_config"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_configuration_save_load"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_load_config"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_print_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_print_pic"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_print_defalt_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_print_config"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_print_wifi_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_print_wifi_config"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_print_Medium_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/indicator_marginleft"
                    android:background="@color/blue_bg"
                    android:text="@string/bt_medium_check"
                    android:textColor="@color/white" />
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>
